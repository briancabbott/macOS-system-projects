    test jpeg-30.$n "getExif, main section, $f" {
	dictsort [fixupdata [::jpeg::formatExif [::jpeg::getExif $f]]]
    } [string trimright [fileutil::cat [file rootname $f].exif.txt]]
    incr n
}

