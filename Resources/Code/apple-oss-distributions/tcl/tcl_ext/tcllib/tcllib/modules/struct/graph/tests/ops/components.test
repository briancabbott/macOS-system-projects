test graphop-t${treeimpl}-g${impl}-s${setimpl}-st${stkimpl}-q${queimpl}-connectedComponents-3.0 {connectedComponents, empty graph} {
    SETUP
    set result [struct::graph::op::connectedComponents mygraph]
    mygraph destroy
    set result
} {}

test graphop-t${treeimpl}-g${impl}-s${setimpl}-st${stkimpl}-q${queimpl}-connectedComponents-3.1 {connectedComponents, nodes, no arcs} {
    SETUP
    mygraph node insert 0 1 2 3 4 5
    set result [setsetcanon [struct::graph::op::connectedComponents mygraph]]
    mygraph destroy
    set result
} {0 1 2 3 4 5}

