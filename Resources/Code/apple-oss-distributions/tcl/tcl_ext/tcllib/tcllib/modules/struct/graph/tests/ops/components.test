# Syntax: struct::graph::op::connectedComponents G

# -------------------------------------------------------------------------
# Wrong # args: Missing, Too many

test graphop-t${treeimpl}-g${impl}-s${setimpl}-st${stkimpl}-q${queimpl}-connectedComponents-1.0 {connectedComponents, wrong args, missing} {
    catch {struct::graph::op::connectedComponents} msg
    set msg
} [tcltest::wrongNumArgs struct::graph::op::connectedComponents {g} 0]

test graphop-t${treeimpl}-g${impl}-s${setimpl}-st${stkimpl}-q${queimpl}-connectedComponents-1.1 {connectedComponents, wrong args, too many} {
    catch {struct::graph::op::connectedComponents g x} msg
    set msg
} [tcltest::tooManyArgs struct::graph::op::connectedComponents {g}]

