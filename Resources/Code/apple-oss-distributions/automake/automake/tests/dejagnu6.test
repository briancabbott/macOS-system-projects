# Check that "make check" fails, when a DejaGnu test fails.

required=runtest
. ./defs || exit 1

set -e

cat > faildeja << 'END'
#! /bin/sh
echo whatever
END

chmod +x faildeja

echo AC_OUTPUT >> configure.in

cat > Makefile.am << 'END'
AUTOMAKE_OPTIONS = dejagnu

DEJATOOL = faildeja

AM_RUNTESTFLAGS = FAILDEJA=$(srcdir)/faildeja
END

mkdir faildeja.test

cat > faildeja.test/faildeja.exp << 'END'
set test test
spawn $FAILDEJA
expect {
    default { fail "$test" }
}
END

$ACLOCAL
$AUTOCONF
$AUTOMAKE --add-missing

./configure

$MAKE check && exit 1
test -f faildeja.log
test -f faildeja.sum
$FGREP 'FAIL: test' faildeja.sum
