# Make sure distclean works in cygnus mode.
# Report from Daniel Jacobowitz

. ./defs || exit 1

set -e

cat >> configure.in << 'END'
AM_MAINTAINER_MODE
AC_CONFIG_FILES([sub/Makefile])
AC_OUTPUT
END

cat > Makefile.am << 'END'
SUBDIRS = sub
END

mkdir sub

cat > sub/Makefile.am << 'END'
data_DATA = foo

foo:
	touch $@

CLEANFILES = $(data_DATA)
END

$ACLOCAL
$AUTOCONF
$AUTOMAKE --cygnus

./configure
$MAKE
test -f sub/foo
$MAKE distclean
test ! -f sub/foo
