# Test for += and backslashes.
# Reported by Ralf Corsepius.

. ./defs || exit 1

set -e

cat >>configure.in <<EOF
AM_CONDITIONAL(A, true)
AM_CONDITIONAL(B, false)
AC_OUTPUT
EOF

cat > Makefile.am << 'END'
foo =  0.h
if A
foo += a0.h \
  a1.h
foo += a2.h \
  a3.h
endif
if B
foo += b0.h \
  b1.h
endif

print:
	@echo BEG: $(foo) :END
END

$ACLOCAL
$AUTOCONF
$AUTOMAKE
./configure
$MAKE print >stdout
cat stdout
grep 'BEG: 0.h a0.h a1.h a2.h a3.h :END' stdout
