# Test basic Cygwin32 functionality.

. ./defs || exit 1

cat >> configure.in << 'END'
AC_PROG_CC
AC_EXEEXT
END

cat > Makefile.am << 'END'
bin_PROGRAMS = www
www_SOURCES = www.c
EXTRA_www_SOURCES = xtra.c
www_LDADD = @extra_stuff@
END

: > www.c
: > xtra.c

$ACLOCAL || exit 1
$AUTOMAKE || exit 1

grep '^CYGWIN' Makefile.in && exit 1
grep 'EXEEXT' Makefile.in
