# Test for $(top_srcdir) with dependencies.

required=gcc
. ./defs || exit 1

mkdir foo

cat >foo/main.c <<'EOF'
int main() { return 0; }
EOF

cat >Makefile.am <<'EOF'
AUTOMAKE_OPTIONS = subdir-objects
bin_PROGRAMS = bar
bar_SOURCES = foo/main.c
EOF

cat >configure.in <<'EOF'
AC_INIT(foo/main.c)
AC_CONFIG_AUX_DIR(.)
AM_INIT_AUTOMAKE(test_am, 1.0)
AC_PROG_CC
AM_PROG_CC_C_O
AC_OUTPUT(Makefile)
EOF

touch README NEWS AUTHORS ChangeLog

mkdir build

set -e

$ACLOCAL
$AUTOCONF
$AUTOMAKE -a

cd build
CC='gcc' ../configure
$MAKE

test -d foo/.deps
$MAKE distclean
test -d foo/.deps && exit 1
:
