# Try a DIST_SUBDIRS subpackage with no SUBDIRS.
# Report from Gary V. Vaughan.

. ./defs || exit 1

set -e

mkdir m4

cat >m4/foo.m4 <<'EOF'
AC_DEFUN([FOO],[
  AC_OUTPUT
])
EOF

cat >>configure.in <<'END'
AC_CONFIG_SUBDIRS([sub])
AC_OUTPUT
END

cat >Makefile.am <<'EOF'
DIST_SUBDIRS = sub
dist-hook:
	test -f $(distdir)/sub/script.in
EOF

mkdir sub

cat >sub/configure.ac <<'EOF'
AC_INIT([sub], [2.3])
AM_INIT_AUTOMAKE
AC_CONFIG_FILES([Makefile])
AC_CONFIG_FILES([script])
FOO
EOF

: >sub/script.in
echo ACLOCAL_AMFLAGS = -I ../m4 > sub/Makefile.am

$ACLOCAL -I m4
$AUTOCONF
$AUTOMAKE

cd sub
$ACLOCAL -I ../m4
$FGREP 'm4_include([../m4/foo.m4])' aclocal.m4
$AUTOCONF
$AUTOMAKE -Wno-override
cd ..

./configure
$MAKE distcheck
