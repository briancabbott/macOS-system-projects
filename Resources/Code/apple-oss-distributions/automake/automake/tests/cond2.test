# Check SUBDIRS set based on conditionals.

. ./defs || exit 1

set -e

cat > configure.in << 'END'
AC_INIT
AM_INIT_AUTOMAKE(nonesuch, nonesuch)
AM_CONDITIONAL(TEST, true)
AC_OUTPUT(Makefile)
END

cat > Makefile.am << 'END'
if TEST
DIR = dir1
else
DIR = dir2
endif
SUBDIRS = $(DIR)
END

mkdir dir1

$ACLOCAL
AUTOMAKE_fails
grep 'Makefile.am:4:.*dir2.*does not exist' stderr
