# Test associated with PR 19.
# From Matthew D. Langston.

required='gcc gzip flex GNUmake'
. ./defs || exit 1

# Ignore user CFLAGS.
CFLAGS=
export CFLAGS

cat > configure.in << 'END'
AC_INIT
dnl Prevent automake from looking in .. and ../..
AC_CONFIG_AUX_DIR(.)
AM_INIT_AUTOMAKE(am_lex_bug, 0.1.1)

dnl Checks for programs.
AC_PROG_CC
AM_PROG_LEX
AC_PROG_YACC
AC_OUTPUT(Makefile)
END

cat > Makefile.am << 'END'
AUTOMAKE_OPTIONS  = foreign
LDADD             = @LEXLIB@

noinst_PROGRAMS   = foo
foo_SOURCES       = foo.l
END

cat > foo.l << 'END'
%%
"END"   return EOF;
.
%%
int
main ()
{
  while (yylex () != EOF)
    ;

  return 0;
}
END

set -e

$ACLOCAL
$AUTOCONF
$AUTOMAKE -a
./configure
$MAKE
echo 'This is the END' | ./foo
$MAKE distcheck

# foo.c must be shipped.
gunzip am_lex_bug-0.1.1.tar.gz
tar tf am_lex_bug-0.1.1.tar | $FGREP foo.c

# While we are at it, make sure that foo.c is erased by
# maintainer-clean, and not by distclean.
test -f foo.c
$MAKE distclean
test -f foo.c
./configure
$MAKE maintainer-clean
test ! -f foo.c
