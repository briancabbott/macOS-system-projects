#endif
#if defined(SunArchitecture) && (OSMajorVersion == 4)
extutil.o::
	RemoveFile($@)
	$(LN) $(XEXTLIBSRC)/$@ .

globals.o::
	RemoveFile($@)
	$(LN) $(XEXTLIBSRC)/$@ .
#endif
#endif

XSecurity.o::
	RemoveFile($@)
	$(LN) $(XEXTLIBSRC)/$@ .

XAppgroup.o::
	RemoveFile($@)
	$(LN) $(XEXTLIBSRC)/$@ .

clean::
	RemoveFiles($(OBJS))

DependTarget()

