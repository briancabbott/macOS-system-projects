<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN" "http://java.sun.com/j2ee/dtds/ejb-jar_2_0.dtd">

<ejb-jar>
   <description>Exception thrower application</description>
   <display-name>Exception Thrower App</display-name>
   <enterprise-beans>
      <session>
         <display-name>Exception Thrower</display-name>
         <ejb-name>ExceptionThrower</ejb-name>
         <home>org.jboss.test.excepiiop.interfaces.ExceptionThrowerHome</home>
         <remote>org.jboss.test.excepiiop.interfaces.ExceptionThrower</remote>
         <ejb-class>org.jboss.test.excepiiop.ejb.ExceptionThrowerBean</ejb-class>
         <session-type>Stateless</session-type>
         <transaction-type>Container</transaction-type>
      </session>
   </enterprise-beans>
</ejb-jar>
