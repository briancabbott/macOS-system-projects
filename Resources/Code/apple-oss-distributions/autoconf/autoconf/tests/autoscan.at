AT_SETUP([autoscan])

AT_DATA([Makefile.am],
[[SUBDIRS = subpkg
]])

AT_DATA([configure.ac],
[[AC_INIT
AC_PREREQ(2.59)
AM_INIT_AUTOMAKE(foreign)
AC_CONFIG_SUBDIRS(subpkg)
AC_CONFIG_FILES(Makefile)
AC_OUTPUT
]])

mkdir subpkg

AT_DATA([subpkg/Makefile.am], [])
AT_DATA([subpkg/configure.ac],
[[AC_INIT
AM_INIT_AUTOMAKE(foreign)
AC_CONFIG_FILES(Makefile)
AC_OUTPUT
]])
AT_CHECK([autoscan])
AT_CHECK([grep subpkg/Makefile configure.scan], [1], [], [ignore])

AT_CLEANUP
