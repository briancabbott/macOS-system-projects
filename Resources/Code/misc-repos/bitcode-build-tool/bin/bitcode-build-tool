#!/usr/bin/xcrun python3 -B

import sys
import os
sys.path.append(os.path.join(os.path.dirname(__file__), "..", "lib"))

from bitcode_build_tool import bitcode_build_tool_main, BitcodeBuildFailure

try:
    bitcode_build_tool_main(sys.argv)
except BitcodeBuildFailure:
    sys.exit(1)
except Exception as e:
    print("bitcode-build-tool internal error", file=sys.stderr)
    import traceback
    traceback.print_exc()
    sys.exit(2)
