                              .font(.title)","                                .foregroundColor(sunHue)","                                .offset(x: -176)","                                .rotationEffect(.degrees(isMoving ? 180 : 0))","                            ","                                .padding(.horizontal, -12)","                                .animation(.easeInOut.repeatCount(1).speed(0.15), value: isMoving)","                            ","                            HStack(alignment: .bottom, spacing: -16) {","                                VStack(spacing: -24) {","                                    Image(\"fan_l\")","                                        .zIndex(1)","                                        .rotationEffect(.degrees(isSpinning ? 360 : 0))","                                        .animation(.linear.repeatForever(autoreverses: false).speed(0.15), value: isSpinning)","                                    Image(\"stand_l\")","                                }","                                ","                                VStack(spacing: -12) {","                                    Image(\"fan_s\")","                                        .zIndex(1)","                                        .rotationEffect(.degrees(isSpinning ? 360 : 0))","                                        .animation(.linear.repeatForever(autoreverses: false).speed(0.15), value: isSpinning)","                                    Image(\"stand_s\")","                                }","                                Spacer()","                            }","                            .padding(EdgeInsets(top: -108, leading: 60, bottom: 0, trailing: 0))","                        }","                        ","                        HStack {","                            Text(\"04:40\")","                            Spacer()","                            Text(\"22:12\")","                        }","                        .padding(.top, -180)","          